{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceRoot}/server/node_modules/mocha/bin/_mocha",
      "args": [
        "--compilers",
        "ts:ts-node/register",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/server/src/tests"
      ],
      "cwd": "${workspaceRoot}/server",
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "compile_ts",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Server",
      "program": "${workspaceRoot}/server/src/index.ts",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/server/build/src/**/*"
      ],
      "preLaunchTask": "compile_ts"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Seed",
      "program": "${workspaceRoot}/server/src/tasks/syncDb.ts",
      "args": [
        "run",
        "seed"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/server/build/src/**/*"
      ],
      "preLaunchTask": "compile_ts"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Server (attach)",
      "address": "localhost",
      "port": 9999,
      "protocol": "inspector"
    }
  ]
}